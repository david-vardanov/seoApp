<div class="row mt-3">
  <div class="col-12">
    <h5>Links:</h5>
    <ul class="list-group" id="links-list">
      <% if (paginatedLinks.links && paginatedLinks.links.length > 0) { %> <%
      paginatedLinks.links.forEach(link => { %>
      <li
        class="list-group-item d-flex justify-content-between align-items-center"
      >
        <span>
          <a href="<%= link.href %>" target="_blank"><%= link.href %></a> (<%=
          link.isInternal ? 'Internal' : 'External' %>)
        </span>
        <button
          class="btn btn-secondary btn-sm analyze-link"
          data-url="<%= link.href %>"
        >
          <i class="bi bi-search"></i> Analyze
        </button>
      </li>
      <% }) %> <% } else { %>
      <li class="list-group-item">No links found.</li>
      <% } %>
    </ul>
    <nav>
      <ul class="pagination justify-content-center mt-3" id="links-pagination">
        <% if (paginatedLinks.totalPages && paginatedLinks.totalPages > 1) { %>
        <% for (let i = 0; i < paginatedLinks.totalPages; i++) { %>
        <li
          class="page-item <%= i === paginatedLinks.currentPage ? 'active' : '' %>"
        >
          <a class="page-link" href="#" data-page="<%= i %>"><%= i + 1 %></a>
        </li>
        <% } %> <% } %>
      </ul>
    </nav>
  </div>
</div>
